
------------------------------------------------------------------------------
-- lessEq(b, a) = a <= b

lessEq(b, a) = a <= b

------------------------------------------------------------------------------
-- lessThan(b, a) = a < b

lessThan(b, a) = a < b

------------------------------------------------------------------------------
-- greaterEq(b, a) = a >= b

greaterEq(b, a) = a >= b

------------------------------------------------------------------------------
-- greaterThan(b, a) = a > b

greaterThan(b, a) = a > b

------------------------------------------------------------------------------
-- notFunc(x) = not x

notFunc(x) = not x

------------------------------------------------------------------------------
-- notEq(a, b) = a != b

notEq(a, b) = a != b

------------------------------------------------------------------------------
-- eq(a, b) = a == b

eq(a, b) = a == b

------------------------------------------------------------------------------
-- orFunc(a, b) = a or b

orFunc(a, b) = a or b

------------------------------------------------------------------------------
-- andFunc(a, b) = a and b

andFunc(a, b) = a and b

------------------------------------------------------------------------------
-- inFunc(b, a) = a in b

inFunc(b, a) = a in b

------------------------------------------------------------------------------
-- Takes a list of boolean values, returns true if any list value is true

any(values) =
  values
  |> toList
  |> reduce(orFunc, false)

------------------------------------------------------------------------------
-- Takes a list of boolean values, returns true if all list values are true

all(values) =
  values
  |> toList
  |> reduce(andFunc, true)
